{
  "name": "react-native-modalfy",
  "version": "1.0.2",
  "description": "Modal citizen of React Native.",
  "main": "index.js",
  "repository": {
    "type": "git",
    "url": "https://github.com/colorfy-software/react-native-modalfy.git"
  },
  "license": "MIT",
  "authors": [
    "Charles Mangwa",
    "Kristjan Vool"
  ],
  "bugs": {
    "url": "https://github.com/colorfy-software/react-native-modalfy/issues"
  },
  "homepage": "https://github.com/colorfy-software/react-native-modalfy#readme",
  "scripts": {
    "flow": "flow --show-all-errors",
    "jest": "jest --verbose",
    "prettier": "prettier --config .prettierrc --parser flow --write \"**/*.js\"",
    "test": "jest --verbose --coverage",
    "test-ci": "yarn run lint-staged && yarn run lint && yarn run flow && yarn run jest"
  },
  "dependencies": {
    "hoist-non-react-statics": "^3.3.0",
    "react-is": "^16.8.6"
  },
  "devDependencies": {
    "@babel/core": "^7.5.5",
    "@babel/plugin-proposal-nullish-coalescing-operator": "^7.4.4",
    "@babel/plugin-proposal-optional-chaining": "^7.6.0",
    "babel-jest": "^24.9.0",
    "enzyme": "^3.10.0",
    "enzyme-adapter-react-16": "^1.14.0",
    "flow-bin": "0.111.0",
    "jest": "^24.9.0",
    "jest-environment-enzyme": "^7.1.2",
    "jest-enzyme": "^7.1.2",
    "metro-react-native-babel-preset": "^0.55.0",
    "react": "^16.8.6",
    "react-dom": "^16.8.6",
    "react-native": "^0.60.5",
    "react-test-renderer": "16.8.6"
  },
  "peerDependencies": {
    "react": ">=16.3.1",
    "react-native": ">=0.55"
  },
  "jest": {
    "coverageDirectory": "./modules/__tests__/__coverage__",
    "coveragePathIgnorePatterns": [
      "/node_modules/"
    ],
    "coverageReporters": [
      "lcov"
    ],
    "preset": "react-native",
    "setupFilesAfterEnv": [
      "jest-enzyme"
    ],
    "testEnvironment": "enzyme",
    "testEnvironmentOptions": {
      "enzymeAdapter": "react16"
    },
    "testMatch": [
      "**/__tests__/**/*.spec.js"
    ],
    "transformIgnorePatterns": [
      "/node_modules/(?!react-native)"
    ]
  },
  "keywords": [
    "react",
    "react native",
    "react-native",
    "modal",
    "modals",
    "mobile",
    "ios",
    "android"
  ]
}
